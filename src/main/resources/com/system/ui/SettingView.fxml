<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.system.ui.SettingsController"
            prefHeight="400.0" prefWidth="600.0">
    <VBox spacing="25" style="-fx-padding: 40; -fx-background-color: white;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" >
        <Text text="System Settings" style="-fx-font-size: 24; -fx-font-weight: bold;" />

        <VBox spacing="10" style="-fx-border-color: #eee; -fx-padding: 20; -fx-border-radius: 5;">
            <Label text="Status Automation Rules" style="-fx-font-weight: bold;" />

            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="Minimum GPA for 'Active' Status:" />
                <TextField fx:id="gpaThresholdField" prefWidth="60" text="2.0" />
            </HBox>

            <CheckBox fx:id="autoUpdateCheck" text="Automatically update status on Save/Import" selected="true" />
        </VBox>

        <Button text="Save Configuration" onAction="#handleSaveSettings"
                style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-padding: 10 20;" />
    </VBox>
</AnchorPane>
